<UserControl x:Class="LongVuBaoWPF.View.CustomerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LongVuBaoWPF.View"
        mc:Ignorable="d"
          Height="Auto" Width="Auto">
    <Grid Margin="10" Background="#FF189B84">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề + Nút -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 10">
            <TextBlock Text="Customer Management"
                   FontSize="18"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Margin="0 0 20 0"/>
            <Button Content="Add" Click="Add_Click" Width="80" Margin="0 0 10 0"/>
            <Button Content="Edit" Click="Edit_Click" Width="80" Margin="0 0 10 0"/>
            <Button Content="Delete" Click="Delete_Click" Width="80"/>
        </StackPanel>

        <!-- Danh sách khách hàng -->
        <DataGrid x:Name="CustomerGrid"
              Grid.Row="1"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              SelectionMode="Single"
              Height="300">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding CustomerID}" Width="Auto"/>
                <DataGridTextColumn Header="Name" Binding="{Binding ContactName}" Width="*"/>
                <DataGridTextColumn Header="Company" Binding="{Binding CompanyName}" Width="*"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
