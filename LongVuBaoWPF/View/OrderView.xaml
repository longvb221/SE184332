<UserControl x:Class="LongVuBaoWPF.View.OrderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LongVuBaoWPF.View"
        mc:Ignorable="d"
         Height="Auto" Width="Auto">
    <Grid Margin="10" Background="#FF189B84">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề và nút thao tác -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 10">
            <TextBlock Text="Order Management"
                   FontSize="18"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Margin="0 0 20 0"/>
            <Button Content="Add" Click="Add_Click" Width="80" Margin="0 0 10 0"/>
            <Button Content="Edit" Click="Edit_Click" Width="80" Margin="0 0 10 0"/>
            <Button Content="Delete" Click="Delete_Click" Width="80"/>
        </StackPanel>

        <!-- Danh sách Order -->
        <DataGrid x:Name="OrderGrid"
              Grid.Row="1"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              SelectionMode="Single"
              Height="300">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Order ID" Binding="{Binding OrderID}" Width="Auto"/>
                <DataGridTextColumn Header="Customer ID" Binding="{Binding CustomerID}" Width="Auto"/>
                <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeID}" Width="Auto"/>
                <DataGridTextColumn Header="Order Date" Binding="{Binding OrderDate}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
