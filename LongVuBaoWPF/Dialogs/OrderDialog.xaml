<Window x:Class="LongVuBaoWPF.View.OrderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LongVuBaoWPF.View"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="OrderDialog" Height="300" Width="400" WindowStartupLocation="CenterScreen" Background="#FFEDE3E3">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Customer ID"/>
            <TextBox x:Name="txtCustomerID"/>

            <TextBlock Text="Employee ID" Margin="0 10 0 0"/>
            <TextBox x:Name="txtEmployeeID"/>

            <TextBlock Text="Order Date" Margin="0 10 0 0"/>
            <DatePicker x:Name="dpOrderDate" SelectedDate="{x:Static sys:DateTime.Now}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="0 20 0 0">
            <Button Content="Save" Width="80" Margin="0 0" Click="Save_Click"/>
            <Button Content="Cancel" Width="80" Margin="68 0" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
