<Window x:Class="BaiTapSo_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BaiTapSo_1"
        mc:Ignorable="d"
        Title="Tổng hai số" Height="200" Width="300">
    <StackPanel>

        <Label Target="{Binding ElementName=txtA}">
            Hệ số a:

        </Label>
        <TextBox Name ="txtA"></TextBox>

        <Label Target="{Binding ElementName=txtB}">
            Hệ số b:

        </Label>
        <TextBox Name ="txtB"></TextBox>
        <TextBlock> Kết Quả:</TextBlock>
        <TextBlock Name ="tbKetQua" Background="Yellow"></TextBlock>
        <StackPanel Orientation="Horizontal">
            <Button Name="btnTong" Width="100" Margin="10"
                    Click="BtnTong_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/9069233_sum_icon.png" RenderTransformOrigin="0.215,0.588"/>
                    <TextBlock Margin="5,0"><Run Text="Tổng"/></TextBlock>
                </StackPanel>
            </Button>
            <Button Name ="btnThoat" Width="100" Margin="10" 
                    Click="BtnThoat_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/9068741_reverse_operation_out_icon.png"/>
                    <TextBlock Margin="5,0">Thoát</TextBlock>
                </StackPanel>


            </Button>




        </StackPanel>


    </StackPanel>
</Window>
